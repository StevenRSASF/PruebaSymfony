{% extends 'base.html.twig' %}

{% block title %}Libro{% endblock %}

{% block body %}
    <h1>Libro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ libro.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ libro.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ libro.descripcion }}</td>
            </tr>
            <tr>
                <th>AnioPublicacion</th>
                <td>{{ libro.anioPublicacion ? libro.anioPublicacion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ libro.autor }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_libro_index') }}" class="btn btn-warning w-100 font-weight-bold mt-2" >Cancelar</a>

    <a href="{{ path('app_libro_edit', {'id': libro.id}) }}" class="btn btn-info w-100 font-weight-bold mt-2" >Editar</a>

    {{ include('libro/_delete_form.html.twig') }}
{% endblock %}
